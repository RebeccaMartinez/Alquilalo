$(document).ready(function(){
        $('#btn_enviar').on('click',function(){
                var inf = $('#informacion').val();
		if(inf == "")
                        document.getElementById("msg1").innerHTML = "Por favor, rellene el campo de texto";
		else{
			document.location.href = 'sugerencias.html';
			document.getElementById("msg2").innerHTML = "Mensaje enviado con Ã©xito";
		}
        	return false;
        })
});

